{
  "name": "seqdb-ui",
  "version": "0.0.0",
  "scripts": {
    "build": "next build",
    "dev": "run-p next proxy",
    "docs": "cd scripts/ && ts-node ./build-docs.ts",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --project tsconfig.json --fix",
    "next": "next",
    "proxy": "micro-proxy -r ./dev-proxy-config.json -p 8000",
    "start": "next start",
    "test": "tsc && jest",
    "test:coverage": "tsc && jest --coverage"
  },
  "dependencies": {
    "@molgenis/rsql": "0.1.2",
    "@zeit/next-css": "^1.0.1",
    "bootswatch": "^4.2.1",
    "common-ui": "file:../common-ui",
    "core-js": "^3.2.1",
    "formik": "^1.5.8",
    "kitsu": "7.0.4",
    "kitsu-core": "7.0.4",
    "lodash": "^4.17.11",
    "next": "^9.1.1",
    "next-transpile-modules": "^2.3.1",
    "react": "^16.10.2",
    "react-cookie": "^4.0.1",
    "react-datepicker": "^2.9.6",
    "react-dom": "^16.10.2",
    "react-select": "^3.0.8",
    "react-tabs": "^3.0.0",
    "title-case": "^2.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --project tsconfig.json --fix",
      "git add"
    ],
    "*.{js,jsx,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
