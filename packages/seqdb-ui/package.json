{
  "name": "seqdb-ui",
  "version": "0.0.0",
  "scripts": {
    "build": "run-s next:build next:export",
    "dev": "run-p next proxy",
    "next": "next",
    "next:build": "node --require ./next.config.js ./node_modules/.bin/next build",
    "next:export": "node --require ./next.config.js ./node_modules/.bin/next export",
    "proxy": "micro-proxy -r ./dev-proxy-config.json -p 8000",
    "test": "tsc && jest",
    "test:coverage": "tsc && jest --coverage",
    "a11y-check": "pa11y-ci -j > pa11y-result.json",
    "a11y-generate-report": "pa11y-ci-reporter-html -s pa11y-result.json --destination ./pa11y-html-report"
  },
  "dependencies": {
    "@molgenis/rsql": "0.1.2",
    "bootswatch": "^4.2.1",
    "common-ui": "link:../common-ui",
    "core-js": "^3.2.1",
    "formik": "^2.1.4",
    "lodash": "^4.17.11",
    "next": "^9.4.3",
    "next-transpile-modules": "^2.3.1",
    "react": "^16.13.1",
    "react-dnd-cjs": "^9.4.0",
    "react-dnd-html5-backend-cjs": "^9.4.0",
    "react-dom": "^16.13.1",
    "react-tabs": "^3.0.0",
    "title-case": "^2.1.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-to-json": "^1.5.2",
    "@types/jest": "^26.0.4",
    "@types/lodash": "^4.14.119",
    "@types/node": "^14.0.18",
    "@types/react": "^16.9.5",
    "@types/react-datepicker": "^3.0.2",
    "@types/react-dom": "^16.9.1",
    "@types/react-select": "^3.0.5",
    "@types/react-table": "^6.8.5",
    "@types/react-tabs": "^2.3.1",
    "@types/react-test-renderer": "^16.0.3",
    "@types/styled-jsx": "^2.2.7",
    "babel-jest": "^26.1.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "react-test-renderer": "^16.8.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --project tsconfig.json --fix",
      "git add"
    ],
    "*.{js,jsx,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
