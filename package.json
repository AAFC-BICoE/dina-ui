    "kitsu-core": "^7.0.4",
    "lodash": "^4.17.11",
    "next": "^9.0.3",
    "next-transpile-modules": "^2.3.1",
    "react": "^16.8.6",
    "react-cookie": "^4.0.1",
    "react-datepicker": "^2.3.0",
    "react-dom": "^16.8.3",
    "react-hooks-async": "^3.1.0",
    "react-select": "^2.3.0",
    "react-table": "^6.10.0",
    "react-tooltip": "^3.10.0",
    "title-case": "^2.1.1"
