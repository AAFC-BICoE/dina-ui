{
  "name": "dina-ui",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "docs": "asciidoctor -a copycss -a toc=left --safe-mode unsafe --destination-dir ./generated-docs ./docs/index.adoc",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "test": "yarn workspaces run test",
    "test:coverage": "yarn workspaces run test:coverage"
  },
  "devDependencies": {
    "@babel/runtime-corejs2": "^7.10.4",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-to-json": "^1.5.2",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@types/react-test-renderer": "^16.0.3",
    "asciidoctor": "^2.0.3",
    "babel-jest": "^26.1.0",
    "babel-plugin-react-require": "^3.1.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.3.5",
    "husky": "^3.0.9",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "pa11y-ci": "^2.3.0",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.8.6",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "tslint-react": "^5.0.0",
    "typescript": "^3.9.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn workspaces run lint-staged"
    }
  }
}
